                                    <input class="form-text text-muted" id="Pics_p2" readonly="readonly" />
                                </div>
                                <div class="modal fade" id="kt_modal_6" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" style="display: none;" aria-hidden="true">

