@model ShoppingCMS_V002.Models.BlogPostsModel
@{

}

<section class="section section-about-us section-about-us-2 section-divider">
    <div class="container">
        <div class="owl-carousel" data-items="3" data-nav="true">
            @foreach (var VARIABLE in Model.Posts)
            {

                <div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                            <div class="about-us-box" style="height: 300px;">
                                <div class="about-us-image" style="background-image: url('@VARIABLE.ImagePath')"></div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                            <div class="inner text-left">
                                <h2>

                                    @VARIABLE.title
                                </h2>
                                <div class="divider divider-line"></div>
                                <p>@VARIABLE.text_min</p>
                                <h2>

                                    <span><a href="@Url.Action("Blog_Post", "D_API", new {Id = VARIABLE.Id})">مشاهده کامل مقاله</a></span>
                                </h2>
                            </div>
                        </div>




                    </div>
                </div>
            }

        </div>
    </div>
</section>