@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--START : TBLS-->
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                دسته بندی های اصلی ثبت شده
            </h3>
        </div>
    </div>
    <div class="kt-portlet__body">

        <!--begin::Section-->
        <div class="kt-section">
            <span class="kt-section__info">
                لیست تمامی دسته بندی های اصلی را در جدول زیر میتوانید مشاهده کنید.
            </span>
            <div class="kt-section__content">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>نام دسته بندی</th>
                            <th>Type List</th>
                            <th>تعداد محصول این دسته بندی</th>
                            <th>وضعیت</th>
                            <th>اقدامات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < ViewBag.Cats.Count; i++)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>@ViewBag.Cats[i].MCName</td>
                                <td>@ViewBag.Cats[i].id_PT</td>
                                <td>@ViewBag.Cats[i].count</td>
                                <td>
                                    @if (ViewBag.Cats[i].ISDelete == "1")
                                    {
                                        <span class="kt-badge kt-badge--inline kt-badge--danger">حذف شده</span>
                                    }
                                    else if (ViewBag.Cats[i].ISDESABLED == "1")
                                    {
                                        <span class="kt-badge kt-badge--inline kt-badge--warning">غیر فعال</span>
                                    }
                                    else
                                    {
                                        <span class="kt-badge kt-badge--inline kt-badge--success">فعال</span>
                                    }
                                </td>

                                <td>

                                    <div class="btn-group mr-2" role="group" aria-label="...">

                                        @if (ViewBag.Cats[i].ISDelete == "0")
                                        {
                                            <button style="border:none" type="button" class="btn btn-secondary" data-toggle="modal" data-target="#PandaDeletModal" onclick="modalloader('@ViewBag.Cats[i].MCName','@ViewBag.Cats[i].id_MC')"><i class="la la-trash"></i></button>
                                            if (ViewBag.Cats[i].ISDESABLED == "0")
                                            {
                                                <button style="border:none" type="button" class="btn btn-secondary" data-toggle="modal" data-target="#PandaedittModal" onclick="modalloader('@ViewBag.Cats[i].MCName','@ViewBag.Cats[i].id_MC')"><i class="la la-edit"></i></button>
                                                <button style="border:none" type="button" class="btn btn-secondary" data-toggle="modal" data-target="#PandaEditModal" onclick="modalloader('@ViewBag.Cats[i].MCName','@ViewBag.Cats[i].id_MC')"><i class="fa fa-ban"></i></button>
                                            }
                                            else
                                            {



                                                <button style="border:none" type="button" class="btn btn-secondary" data-toggle="modal" data-target="#PandaonModal" onclick="modalloader('@ViewBag.Cats[i].MCName','@ViewBag.Cats[i].id_MC')"><i class="fa fa-redo-alt"></i></button>
                                            }
                                        }


                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!--end::Section-->
    </div>
    <!--end::Form-->
</div>
<!--END : TBLS-->
